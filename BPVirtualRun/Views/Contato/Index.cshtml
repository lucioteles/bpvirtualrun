@model BPVirtualRun.Models.ViewModels.ContatoVM
@{
    ViewBag.Title = "Contato";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    @if (ViewBag.Erro != null)
            {
        <div class="alert alert-danger alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>@ViewBag.Erro</div>
    }
    @if (ViewBag.Sucesso != null)
            {
        <div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>@ViewBag.Sucesso</div>
    }
    <div class="col-md-5">
        <h3 class="dt-center">Beach Park</h3><br />
        <b>Horário de funcionamento</b><br />
        As bilheterias abrem às 10h30 e o Parque Aquático funciona das 11h às 17h.
        <br />
        <b>Endereço</b>
        <br />
        R. Porto das Dunas, 2734
        Porto das Dunas - Aquiraz
        CEP: 61700-000
        <br />
        <b>Contato</b>
        <br />
        (85) 4012-3000
    </div>
    <div class="col-md-7">
        @using (Html.BeginForm("Index", "Contato", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-2">Nome:</div>
                <div class="col-md-10"><input type="text" name="Nome" class="form-control" /></div>
            </div><br />
            <div class="row">
                <div class="col-md-2">E-mail:</div>
                <div class="col-md-10"><input type="email" name="Email" class="form-control" /></div>
            </div><br />
            <div class="row">
                <div class="col-md-2">Assunto:</div>
                <div class="col-md-10"><input type="text" name="Assunto" class="form-control" /></div>
            </div><br />
            <div class="row">
                <div class="col-md-2">Mensagem:</div>
                <div class="col-md-10"><textarea cols="10" name="Mensagem" class="form-control"></textarea></div>
            </div><br />
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary pull-right">Enviar</button>
                </div>
            </div>
        }
    </div>
</div>
